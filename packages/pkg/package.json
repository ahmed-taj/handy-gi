{
  "name": "handy-gi",
  "author": "Ahmed Tajelsir",
  "license": "MIT",
  "version": "0.0.0",
  "description": "A node package that automatically detects and generates suitable `.gitignore` content based on a given directory content(in addition to some other hacks). It utilizes official GitHub's [collection] for `.gitignore` templates.",
  "keywords": [
    "git",
    ".gitignore",
    "github",
    "git-ignore"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run docs",
    "compile": "babel src -d lib --copy-files",
    "clean": "rimraf -rf lib",
    "docs": "documentation readme src/index.js --section=Documentation",
    "prepublish": "npm run build",
    "test": "jest --coverage"
  },
  "engines": {
    "node": ">=6.10.2",
    "npm": ">=3.10.10"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "documentation": "^4.0.0-rc.1",
    "jest": "^20.0.4"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "glob": "^7.1.2",
    "minimatch": "^3.0.4"
  },
  "repository": {
    "url": "https://github.com/ahmed-taj/handy-gi/tree/master/packages/pkg"
  },
  "jest": {
    "testMatch": [
      "**/src/**/*.test.js?(x)"
    ],
    "coverageReporters": [
      "html",
      "json",
      "lcov",
      "text"
    ],
    "testEnvironment": "node"
  }
}
