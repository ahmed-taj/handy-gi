{
  "name": "handy-gi",
  "author": "Ahmed Tajelsir <ah.tajelsir@gmail.com>",
  "license": "MIT",
  "description": "A node package that automatically detects and generates suitable `.gitignore` content based on a given directory content(in addition to some other hacks). It utilizes official GitHub's [collection] for `.gitignore` templates.",
  "keywords": [
    "git",
    ".gitignore",
    "github",
    "git-ignore"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:src && npm run build:docs",
    "build:src": "babel src -d dist --copy-files --ignore '*.test.js'",
    "prebuild:src": "rimraf -rf dist",
    "build:docs": "documentation readme src/index.js --section=Modules",
    "prepublish": "npm run build",
    "test": "jest --coverage"
  },
  "engines": {
    "node": ">=6.10.2",
    "npm": ">=3.10.10"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "documentation": "^4.0.0-rc.1",
    "jest": "^20.0.4"
  },
  "dependencies": {
    "glob": "^7.1.2",
    "minimatch": "^3.0.4"
  },
  "repository": {
    "url": "https://github.com/ahmed-taj/handy-gi/tree/master/packages/core"
  },
  "files":[
    "dist",
    "README.md"
  ],
  "jest": {
    "testMatch": [
      "**/src/**/*.test.js?(x)"
    ],
    "coverageReporters": [
      "html",
      "json",
      "lcov",
      "text"
    ],
    "testEnvironment": "node"
  }
}
